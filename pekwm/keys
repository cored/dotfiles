	# External commands
	# Terminals
	Chain = "Ctrl Mod1 X" {
		KeyPress = "A" { Actions = "Exec $TERM &" }
		KeyPress = "G" { Actions = "Exec $GTERM &" }
		KeyPress = "E" { Actions = "Exec $ETERM &" } 
	}
	# Net
	Chain = "Ctrl Mod1 N" {
		KeyPress = "F" { Actions = "Exec firefox" }
		KeyPress = "G" { Actions = "Exec pidgin" }
		KeyPress = "I" { Actions = "Exec $IRC" }
    KeyPress = "M" { Actions = "Exec $EMAIL" }
	}
	# Utils
	Chain = "Ctrl Mod1 U" { 
		KeyPress = "E" { Actions = "Exec $ECLIPSE" } 
		KeyPress = "L" { Actions = "Exec xscreensaver-command -lock" }
		KeyPress = "S" { Actions = "Exec scrot" }
    KeyPress = "T" { Actions = "Exec thunar" }
    KeyPress = "W" { Actions = "Exec $DLOGS" } 
